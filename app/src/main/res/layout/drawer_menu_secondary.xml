<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/secondary_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_profile"
        style="@style/drawerMenuItemStyle"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/profile_image"
            style="@style/drawerMenuIconStyle"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:src="@drawable/ic_profile_person" />

        <TextView
            style="@style/drawerMenuStyle"
            android:layout_toRightOf="@id/profile_image"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:text="Display Name" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/manage_profile"
        style="@style/drawerMenuItemStyle">

        <ImageView
            android:id="@+id/icon"
            style="@style/drawerMenuIconStyle"
            android:src="@drawable/ic_settings" />

        <TextView
            style="@style/drawerMenuStyle"
            android:paddingLeft="24dp"
            android:layout_toRightOf="@id/icon"
            android:fontFamily="sans-serif"
            android:text="Manage Profiles" />

    </RelativeLayout>



</LinearLayout>