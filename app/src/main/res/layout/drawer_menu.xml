<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:id="@+id/primary_menu">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/dashboard"
            style="@style/drawerMenuItemStyle"
            android:background="@color/medium_grey">

            <ImageView
                android:id="@+id/icon1"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_dashboard"
                />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon1"
                android:text="Dashboard" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/create_group"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon2"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_create_group" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon2"
                android:text="Create Group" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/join_group"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon3"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_join_group" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon3"
                android:text="Join Group" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_profile"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon4"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_add_profile" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toLeftOf="@id/icon_arrow"
                android:layout_toRightOf="@id/icon4"
                android:text="Add Profile"
                 />

            <ImageView
                android:id="@+id/icon_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/add_profile_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/join_as_teacher"
                style="@style/drawerMenuItemStyle"
                android:paddingLeft="36dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/icon12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_indicator_arrow"
                    android:tint="@color/red" />

                <TextView
                    style="@style/drawerMenuStyle"
                    android:layout_toRightOf="@id/icon12"
                    android:text="Join as Teacher"
                    android:textColor="@color/grey"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/join_as_student"
                style="@style/drawerMenuItemStyle"
                android:paddingLeft="36dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/icon13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_indicator_arrow"
                    android:tint="@color/green" />

                <TextView
                    style="@style/drawerMenuStyle"
                    android:layout_toRightOf="@id/icon13"
                    android:textColor="@color/grey"
                    android:text="Join as Student" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/join_as_parent"
                style="@style/drawerMenuItemStyle"
                android:paddingLeft="36dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/icon14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_indicator_arrow"
                    android:tint="@color/yellow" />

                <TextView
                    style="@style/drawerMenuStyle"
                    android:layout_toRightOf="@id/icon14"
                    android:textColor="@color/grey"
                    android:text="Join as Parent" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/explore"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon6"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_explore" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon6"
                android:gravity="center_vertical"
                android:text="Explore" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/settings"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon7"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_settings" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon7"
                android:text="Settings" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wallet"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon8"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_wallet" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon8"
                android:text="Wallet" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rate_us"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon9"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_rate_us" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon9"
                android:text="Rate us on app store" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feedback"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon10"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_feedback" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon10"
                android:text="Send Feedback" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help"
            style="@style/drawerMenuItemStyle">

            <ImageView
                android:id="@+id/icon11"
                style="@style/drawerMenuIconStyle"
                android:src="@drawable/ic_help" />

            <TextView
                style="@style/drawerMenuStyle"
                android:layout_toRightOf="@id/icon11"
                android:text="Help" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/terms_and_condition"
            style="@style/drawerMenuItemStyle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Terms and conditions"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>